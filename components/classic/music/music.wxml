<!--components/classic/music/music.wxml-->
<view hidden='{{hidden}}' class="container">
  <image class="classic-img" src="{{img}}"/>
  <image class="player-img" bind:tap="onPlay" src="{{play ? playSrc : pauseSrc}}"/>
  <image class="tag" src="images/music@tag.png"/>
  <text class="content">{{content}}</text>
</view>
